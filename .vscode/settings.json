{
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "breadcrumbs.showModules": true,
    "markdown.preview.fontFamily": "'Century Gothic',' MesloLGS NF', 'Ubuntu', sans-serif",
    "editor.fontFamily": "'MesloLGS NF', Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 14,
    "editor.formatOnSave": true,
    "cSpell.customDictionaries": {
        "project-words": {
            "name": "cspell",
            "path": "${workspaceRoot}/config/cspell.txt",
            "description": "Words used in the configured project.",
            "addWords": true
        }
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.python"
    }
}